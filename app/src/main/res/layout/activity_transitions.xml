<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="15dp"
    android:paddingRight="15dp"
    tools:context="com.developer.allef.boilerplateapp.ui.transitions.TransitionsActivity">

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btn_close_down"
        android:layout_width="match_parent"
        android:layout_height="57dp"
        android:layout_marginTop="50dp"
        android:text="Close View Bottom"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btn_close_top"
        android:layout_width="match_parent"
        android:layout_height="57dp"
        android:text="Close View Top"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn_close_down" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btn_close_slide_left"
        android:layout_width="match_parent"
        android:layout_height="57dp"
        android:text="Close View Left"
        app:layout_constraintTop_toBottomOf="@+id/btn_close_slide_rigth"
        tools:layout_editor_absoluteX="-33dp" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btn_close_slide_rigth"
        android:layout_width="match_parent"
        android:layout_height="57dp"
        android:text="Close View Rigth"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn_close_top" />
    <com.google.android.material.button.MaterialButton
        android:id="@+id/btn_close_fade"
        android:layout_width="match_parent"
        android:layout_height="57dp"
        android:text="Close View Fade"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn_close_slide_left" />
    <com.google.android.material.button.MaterialButton
        android:id="@+id/btn_close_left_rigth"
        android:layout_width="match_parent"
        android:layout_height="57dp"
        android:text="Close View Left open Right"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn_close_fade" />
    <com.google.android.material.button.MaterialButton
        android:id="@+id/btn_close_rigth_left"
        android:layout_width="match_parent"
        android:layout_height="57dp"
        android:text="Close View Right open left"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn_close_left_rigth" />

</androidx.constraintlayout.widget.ConstraintLayout>
